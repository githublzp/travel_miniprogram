/* pages/detail/detail.wxss */
.jdPic {
  width: 100%;
  height: 350rpx;
}

.jingdian {
  position: relative;
  overflow: hidden;
  margin: 20rpx;
}
.jdName {
  font-size: 35rpx;
  font-weight: bold;
}
.coll-share {
  position: relative;
  overflow: hidden;
}
.coll-share image {
  width: 80rpx;
  height: 80rpx;
  float: right;
  margin-right: 15rpx;
}
.coll-share .musicicon {
  position: absolute;
  right: 50%;
  margin-right: -40rpx;
}
.coll-share::after {
  content: '';
  position: absolute;
  top: 40rpx;
  width: 100%;
  height: 1rpx;
  background-color: #eee;
  z-index: -1;
}
.jdDetail .jdTitle {
  font-weight: bold;
}

.jdDetail text:not(.jdTitle) {
  width: 100%;
  display: block;
  font-size: 28rpx;
  text-indent: 56rpx;
  padding: 20rpx 0;
}