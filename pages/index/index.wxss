/**index.wxss**/
page {
  height: 100%;
}
.indexContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
}

.usermotto-view {
  margin-top: 200px;
}

.usermotto {
  display: block;
  width: 300rpx;
  height: 70rpx;
  border-radius: 20rpx;
  background-color: #89D562;
  text-align: center;
  line-height: 70rpx;
  color: #fff;
}