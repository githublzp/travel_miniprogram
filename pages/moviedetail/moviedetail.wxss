/* pages/moviedetail/moviedetail.wxss */
.movieDetailContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.movieInfo {
  display: flex;
  width: 70%;
  flex-direction: column;
  padding: 20rpx;
}
.movieInfo text {
  font-size: 28rpx;
}
.moviePic {
  width: 70%;
  height: 700rpx;
  margin: 20rpx 0;
}
.movieInfo .movieName {
  font-size: 40rpx;
  font-weight: bold;
}
button {
  width: 60%;
  background-color: green;
  color: #fff;
}